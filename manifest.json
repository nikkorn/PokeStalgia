{
  "name": "PokeStalgia",
  "version": "0.1",
  "manifest_version": 3,
  "description": "Bring the hunt for pokemon to your browser.",

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_icon": "resources/icon.png",
    "default_title": "Bring the hunt for pokemon to your browser.",
    "default_popup": "pokedex.html"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["pokemon.js", "capturebar.js", "spawn.js", "pokestalgia.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],

  "permissions": ["activeTab", "tabs", "storage"],

  "host_permissions": ["<all_urls>"],

  "web_accessible_resources": [
    {
      "resources": ["pokestalgia.js", "resources/*"],
      "matches": ["<all_urls>"]
    }
  ],

  "icons": {
    "128": "resources/icon.png"
  }
}
